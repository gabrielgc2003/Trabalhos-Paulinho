<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro Turmas!"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Alunos"
        android:layout_margin="20dp"
        android:id="@+id/btCadastroAluno"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Professores"
        android:layout_margin="20dp"
        android:id="@+id/btCadastroProfessor"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Disciplinas"
        android:layout_margin="20dp"
        android:id="@+id/btCadastroDisciplina"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro Turmas"
        android:layout_margin="20dp"
        android:id="@+id/btCadastroTurma"/>
</LinearLayout>